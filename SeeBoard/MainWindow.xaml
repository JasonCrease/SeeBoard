<Window x:Class="SeeBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SeeBoard" Height="750" Width="1250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="310" />
            <RowDefinition Height="310" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="410"/>
            <ColumnDefinition Width="410"/>
            <ColumnDefinition Width="410"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="ButtonGo" Width="150" Height="40" Grid.Row ="0" Grid.Column="0" Content="Go" Click="ButtonGo_Click" />
        <Image x:Name="OrigImage" Width="400" Height="300" Grid.Row ="1" Grid.Column="0"/>
        <Image x:Name="GrayImage" Width="400" Height="300" Grid.Row ="1" Grid.Column="1"/>
        <Image x:Name="CannyImage" Width="400" Height="300" Grid.Row ="2" Grid.Column="0"/>
        <Image x:Name="LinesImage" Width="400" Height="300" Grid.Row ="2" Grid.Column="1"/>
        <Image x:Name="WarpedImage" Width="400" Height="300" Grid.Row ="2" Grid.Column="2"/>
    </Grid>
</Window>
